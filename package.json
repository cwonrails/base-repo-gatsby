{
  "name": "base-repo-gatsby",
  "version": "0.0.0",
  "description": "Opinionated base template for new Gatsby projects",
  "author": "Chris Watson",
  "license": "MIT",
  "scripts": {
    "build": "gatsby build",
    "clean": "gatsby clean",
    "develop": "gatsby develop",
    "format": "prettier --write \"**/*.js{,on}\" \"**/*.md\"  \"**/*.mdx\"",
    "lint": "eslint . --fix --ext .js,.md,.mdx",
    "start": "gatsby develop"
  },
  "dependencies": {
    "@emotion/core": "^10.0.20",
    "@mdx-js/react": "^1.5.0",
    "gatsby": "^2.15.28",
    "gatsby-plugin-theme-ui": "^0.2.43",
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "theme-ui": "^0.2.43"
  },
  "devDependencies": {
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-mdx": "^1.5.5",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.15.1",
    "husky": "^3.0.8",
    "lint-staged": "^9.4.1",
    "prettier": "^1.18.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
